<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        >

    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <FrameLayout
                android:id="@+id/movie_list_item_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:srcCompat="@tools:sample/avatars"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:id="@+id/movie_list_item_image"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_gravity="bottom"
                    android:padding="0dp"
                    android:background="@color/movie_list_item_image_overlay">


                <TextView
                        android:id="@+id/movie_list_item_title"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:textSize="@dimen/movie_list_item_title_size"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@color/text_color_primary"
                        android:text="Movie Title"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                />

                <TextView
                        android:id="@+id/movie_list_item_releasedate"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:textSize="@dimen/movie_list_item_releasedate_size"
                        android:text="99/99/9999"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:textColor="@color/text_color_secondary"
                        android:layout_below="@+id/movie_list_item_title"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                />

            </RelativeLayout>

        </FrameLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>